
     <h2>Shopping List</h2>
<div class = "shopping_list_container">

<div class = "shopping_list_wrapper">
<div>
<h5>Amount of food to buy: <%= @missing_foods.length%> </h5>
</div>
<div>
<h5>Total value of food needed: $<%= @total_value_needed %> </h5>
</div>
</div>
	<table class="table table-striped table-bordered table-size">
					<thead>
						<tr>
							<th scope="col">Food</th>
							<th scope="col">Quantity</th>
							<th scope="col">Price</th>
						</tr>
					</thead>
					<tbody>
				 <% @missing_foods.each do |missing_food| %>	
         	<tr>
									
							<td><%= missing_food[:food_name] %></td>
                             <td><%= missing_food[:quantity_needed] %></td>
				
						 <td>$<%= missing_food[:total_price_needed] %></td>
			
								<% end %>

						</tr>
					</tbody>
			</table>

            </div>
            </div>
            </div>